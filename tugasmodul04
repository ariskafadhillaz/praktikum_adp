# program bilangan sempurna

bilangan = int(input("Masukkan bilangan bulat positif: "))

if bilangan <= 0:
    print("Bilangan harus positif")
else:
    total = 0

    for i in range(1, bilangan):
        if bilangan % i == 0:
            total += i

    if total == bilangan:
        jenis = "Bilangan Sempurna"
    else:
        jenis = "Bukan Bilangan Sempurna"

# program segitiga angka

bilangan = int(input("masukkan tinggi segitiga:"))

while bilangan <= 0:
    bilangan = int(input("terjadi kesalahan,masukkan bilangan positif: "))
for i in range(1, bilangan+ 1):
    for j in range(1, i + 1):
        print(j, end="")
    print()

